{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Benchmark All",
            "command": "cargo",
            "args": [
                "bench",
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
            }
        },
        {
            "type": "shell",
            "label": "Benchmark current day",
            "command": "cargo",
            "args": [
                "bench",
                "--",
                "${fileBasenameNoExtension}",
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}